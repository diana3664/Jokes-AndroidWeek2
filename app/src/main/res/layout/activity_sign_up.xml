<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ribeye"
        android:text="Sign Up for Jokes"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signEditText"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPersonName2"
        android:layout_marginStart="-160dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/editTextTextPersonName2"
        android:background="@color/orange_200"
        android:fontFamily="sans-serif"
        android:hint="..."
        android:textSize="30sp" />

    <EditText
        android:id="@+id/signEditText2"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPersonName3"
        android:layout_marginStart="-160dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/editTextTextPersonName3"
        android:background="@color/orange_200"
        android:fontFamily="sans-serif"
        android:hint="..."
        android:inputType="textEmailAddress"
        android:textSize="30sp" />

    <Button
        android:id="@+id/viewJokesButton"
        android:layout_width="317dp"
        android:layout_height="61dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="500dp"
        android:background="@color/orange_200"
        android:text="Joke Categories"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:strokeColor="@color/yellow_200" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:text="First Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="255dp"
        android:width="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:text="Second Name"
        android:textStyle="bold" />


</RelativeLayout>